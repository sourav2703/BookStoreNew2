<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] | Book Store</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@300&display=swap" rel="stylesheet">

    <link href="~/css/Navbar.css" rel="stylesheet" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link href="~/css/footer.css" rel="stylesheet" />
    <link href="~/css/OneBookCss.css" rel="stylesheet" />
    <link href="~/css/allbooks.css" rel="stylesheet" />
    <link href="~/css/addbooks.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">





</head>
<body>
    <div class="navbar">
        <div class="left_side">
            <div class="logo">
                <p> <a asp-controller="home" asp-action="index" class="design">S</a> </p>
                <p> <a asp-controller="home" asp-action="index">Book Store</a> </p>
            </div>
            <p> <a asp-controller="Home" asp-action="Index">Home</a> </p>
            <p> <a asp-controller="Home" asp-action="AboutUs">About</a> </p>
            <p> <a asp-controller="Home" asp-action="Index">Contact</a> </p>
            <p> <a asp-controller="Home" asp-action="AllBooks">Show Books</a> </p>
            <p> <a asp-controller="Home" asp-action="addbooks">Add Books</a> </p>

        </div>
        <div class="right_side">
            <div class="login_btn">
                <button type="submit" class="login_And_Reg_btn">Login</button>
            </div>
            <div class="register_btn">
                <button type="submit" class="login_And_Reg_btn">Register</button>


            </div>
        </div>



    </div>
    <div>
        @RenderBody()
    </div>

    @*.................................FOOTER....................................*@
    @RenderSection("Footer_Wala" , required:false)
    
</body>
</html>

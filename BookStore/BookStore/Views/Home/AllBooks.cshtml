@{
    ViewData["Title"] = "AllBooks";
}
@model IEnumerable<BookModel>

<!DOCTYPE html>
<html lang="en">

<body>
    <div class="container2">
        <div class="childcontainer">


            @foreach (var a in Model)
            {
                <div class="box">
                    <div class="img">
                        img
                    </div>
                    <div class="aboutbox">
                        <p>
                            @a.Title
                            @a.Description
                        </p>
                    </div>
                    <div class="viewdetails">

                         <a href="/home/getonebook/@a.Id"><button type="submit" class="view_details_btn">View Details</button></a> 

                    </div>
                    <div class="authorname">
                        <p>
                            @a.Author
                        </p>
                    </div>
                </div>

            }



        </div>
    </div>

</body>
</html>


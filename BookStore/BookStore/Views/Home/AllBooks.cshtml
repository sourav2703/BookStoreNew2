
@using BookStore.Data
@model IEnumerable<books>

<!DOCTYPE html>
<html lang="en">

<body>
    <div class="container2">
        <div class="childcontainer">


            @foreach (var a in Model)
            {
                <div class="box">
                    <div class="img">
                        img
                    </div>
                    <div class="aboutbox">
                        <p>
                            Title :- @a.Title
                            Description :- @a.Description
                        </p>
                    </div>
                    <div class="viewdetails">

                         <a asp-controller="home" asp-action="getonebook" asp-route-id="@a.Id"><button type="submit" class="view_details_btn">View Details</button></a> 

                    </div>
                    <div class="authorname">
                        <p>
                           Author :- @a.Author
                        </p>
                    </div>
                </div>

            }



        </div>
    </div>

</body>
</html>




@model BookModel
@{
    ViewData["Title"] = Model.Title;
}

<h1>GetOneBook</h1>


<!DOCTYPE html>
<html lang="en">


<body>
    <div class="Main_container">
        <div class="container">
            <div class="child_container1">
                <div class="box">
                    <h3>@Model.Title</h3>
                    <p class="author_class">By:</p> <span>@Model.Author</span>
                    <p>
                        @Model.Description
                    </p>
                    <a href="" class="Read_Now_btn"><button>Read Now</button></a>
                </div>
            </div>
            <div class="child_container2">
                <div class="box">
                    <p class="box_item">Category - @Model.Category</p>
                    <p class="box_item">Total Page - @Model.PageCount</p>
                    <p class="box_item">Language - @Model.Language</p>

                </div>

            </div>
        </div>



    </div>

</body>

</html>